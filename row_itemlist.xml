<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_listView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src = "@drawable/monday"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewEventNumber"
        android:padding="5dp" />


        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:text="Date"
            android:textSize="25sp"
            android:padding="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewEventNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/textViewDate"
            android:padding="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/textViewEventNumber"
            android:padding="5dp"
            android:text="Event Number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_below="@id/textViewEventName"
            android:padding="5dp"
            android:text="Time"
            android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewrHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTime"
        android:layout_toRightOf="@id/imageView"
        android:padding="5dp"
        android:text="Reg Hours"
        android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewoHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewrHours"
            android:layout_toRightOf="@id/imageView"
            android:padding="5dp"
            android:text="OT Hours"
            android:textSize="15sp" />

</RelativeLayout>
